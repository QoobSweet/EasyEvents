{
  "name": "easy-events-v3",
  "version": "0.3.0",
  "description": "V3 of QuickEvents Renamed to EasyEvents with node.js backend coded in typescript",
  "main": "easy-events.js",
  "type": "module",
  "scripts": {
    "build-server": "cd ./server && npm run-script build",
    "build-server:watch": "cd ./server && npm run-script build:watch",
    "start-server": "cd ./server && npm start",
    "heroku-postbuild": "cd ../client && npm install && npm run build",
    "lint": "npm run lint:lit-analyzer && npm run lint:eslint",
    "lint:eslint": "eslint 'src/**/*.ts'",
    "lint:lit-analyzer": "lit-analyzer",
    "format": "prettier src/* --write",
    "analyze": "wca analyze \"src/**/*.ts\" --outFile custom-elements.json",
    "serve": "es-dev-server --node-resolve --watch"
  },
  "keywords": [
    "web-components",
    "lit-element",
    "typescript"
  ],
  "author": "Kevin Alfano",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/QoobSweet/EasyEvents/issues"
  },
  "homepage": "https://github.com/QoobSweet/EasyEvents#readme"
}
