{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "rootDir": "./src",
    "outDir": "../dist/public",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true
      }
    ]
  },
  "include": [ "src/**/*.ts" ],
  "exclude": [ "node_modules" ]
}